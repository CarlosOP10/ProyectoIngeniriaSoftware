    <input type="radio" id="basico" name="nivel" value="basico" style="text-align:center" checked>
    <label for="basico">Basico</label>
    <input type="radio" id="intermedio" name="nivel" value="intermedio" style="text-align:center">
    <label for="intermedio">Intermedio</label>
    <input type="radio" id="avanzado" name="nivel" value="avanzado" style="text-align:center">
    <label for="avanzado">Avanzado</label>
    <br>
    <br>
    <b>Numero de intentos permitidos: </b>
    <input type="number" name="numeroIntentos" min="1" max="20" value="10">
    <input type="submit" value="Aceptar">
    <br>
    <br>
</form>
